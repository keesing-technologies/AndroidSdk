<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <TextView android:layout_weight="0.3" android:id="@+id/rfidPageTitle"
            style="@style/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rfid_page_title" />

        <Button android:visibility="gone"
            android:id="@+id/btnMrzRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture MRZ" />

    </LinearLayout>



    <EditText
        android:id="@+id/mrz" android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/imgChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp" />

</LinearLayout>