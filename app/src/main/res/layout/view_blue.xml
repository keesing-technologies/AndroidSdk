<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="8dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Einwilligung in die Verwendung personenbezogener Daten"
            android:id="@+id/headerTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:textSize="24dp"
            android:layout_marginBottom="10dp"
            android:textColor="#002244"
            />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:id="@+id/scrollView3"
            android:layout_weight="0"
            android:layout_below="@+id/headerTextView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mit Nutzung dieser APP willigt der Nutzer ein, dass personenbezogene Daten durch die JenID Solutions GmbH erhoben werden und auf deren Servern gespeichert werden. Die Server befinden sich in Deutschland. "
                    android:id="@+id/textView2"
                    android:textSize="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#002244" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Der Nutzer willigt ferner ein, dass JenID Solutions GmbH diese Daten ausschließlich zur Nutzung in Verbindung mit der APP Genuine-ID verwendet.  Die Daten werden ausschließlich zu folgenden Zwecken verwendet: Die APP ermöglicht die Auswertung der Echtheit von Dokumenten. Zum Zweck der Verifizierung ist eine Speicherung der auf dem Dokument enthaltenen personenbezogenen Daten notwendig. Die Daten werden nach erfolgtem Abgleich und Auswertung gelöscht. Im Falle von auftretenden Fehlern (Bugs) werden die Daten für die Fehlersuche und Beseitigung verwendet und nach Abschluss der Untersuchung gelöscht. Eine Weitergabe der Daten an Dritte erfolgt nicht."
                    android:id="@+id/textView3"
                    android:textSize="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#002244"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diese Einwilligungserklärung kann ich jederzeit mit der Wirkung für die Zukunft gegenüber JenID Solutions schriftlich oder per Email widerrufen."
                    android:id="@+id/dataTextView"
                    android:textSize="16dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="#002244"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontaktdaten Widerruf: "
                    android:id="@+id/textView4"
                    android:textSize="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#002244"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JenID Solutions GmbH"
                    android:id="@+id/textView5"
                    android:textSize="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#002244"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moritz-von-Rohr-Straße 1A"
                    android:id="@+id/textView6"
                    android:textSize="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#002244"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07745 Jena"
                    android:id="@+id/textView7"
                    android:textSize="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#002244"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deutschland"
                    android:id="@+id/textView8"
                    android:textSize="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#002244"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: support@jenidsolutions.com"
                    android:id="@+id/textView9"
                    android:textSize="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#002244"/>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="decline"
            android:id="@+id/button"
            android:layout_weight="0"
            android:background="@drawable/btndraw"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="accept"
            android:id="@+id/button2"
            android:layout_weight="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:layout_marginLeft="0dp"
            android:background="@drawable/btndraw" />



    </RelativeLayout>
</LinearLayout>