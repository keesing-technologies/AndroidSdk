<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="info" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="title.bold" parent="title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="error.bold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#F51B00</item>
    </style>

    <style name="nav.title" parent="nav.subtitle">
        <item name="android:textStyle">bold</item>

    </style>

    <style name="nav.subtitle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/keesingBlue</item>
        <item name="android:padding">5dp</item>
    </style>




</resources>
